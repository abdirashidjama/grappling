<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abdirashidjama.grapplingjournal.MainActivity">

    <TextView
        android:layout_width="0dp"
        android:layout_height="29dp"
        android:text="What would you like to do?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.033"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="42dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp" />

    <LinearLayout
        android:layout_width="3200dp"
        android:layout_height="1084dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="83dp"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1">

        <Button
            android:id="@+id/button"
            android:layout_width="328dp"
            android:layout_height="57dp"
            android:text="Add Class"
            android:visibility="visible"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="62dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="328dp"
            android:layout_height="57dp"
            android:text="Sparring Session"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="145dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="329dp"
            android:layout_height="57dp"
            android:text="Drilling Session"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="227dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="328dp"
            android:layout_height="57dp"
            android:onClick="onGetTechnique"
            android:text="New Technique"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="316dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="328dp"
            android:layout_height="57dp"
            android:text="Moves Library"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="401dp"
            android:onClick="onGetListofMoves"
            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
